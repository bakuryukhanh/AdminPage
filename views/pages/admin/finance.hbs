{{#extend "bodyid"}}
page-top
{{/extend}}


{{> navbar}}

<div id="wrapper">

    <!-- Sidebar -->
    {{> sidebarAdmin}}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Overview</li>
            </ol>
            <!-- Area Chart Example-->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-chart-area"></i>
                    Income this Year
                </div>
                <div class="card-body">
                    <canvas id="myBarChart" width="100%" height="30"></canvas>
                </div>

            </div>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-chart-area"></i>
                    Income this month
                </div>
                <div class="card-body">
                    <canvas id="myAreaChart" width="100%" height="30"></canvas>
                </div>

            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-chart-pie"></i>
                    Drink Statistic
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-6">
                            <h1>Summary</h1>
                            <p>Best seller:
                                <span id="best-sale"></span>
                            </p>
                            <p>Total sale:
                                <span id="total-sale"></span>
                            </p>

                        </div>
                        <div class="card-body col-lg-6">
                            <canvas id="myChartPie" width="100%" height="50"></canvas>
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright Â© Your Website 2018</span>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.content-wrapper -->

</div>
{{> logout}} {{> scrolltotop}}
{{#extend "script"}}
<script src="/js/chart-area.js"></script>
<script src="/js/chart-pie.js"></script>
<script src="/js/chart-bar.js"></script>

{{/extend}}