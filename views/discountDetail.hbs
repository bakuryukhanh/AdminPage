{{>navbar}}
<div id="wrapper">
    {{>sidebarAdmin}}
    <div class="container-fluid">
        <h1>Discount Detail</h1>
        <form data-toggle="validator" role="form" id="discount-detail-form">
            <div class="row">
                <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <label for="name" class="control-label">name</label>
                    <input type="text" class="form-control" id="name" value="{{discount.name}}" required>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <label for="code" class="control-label">code</label>
                    <input type="text" class="form-control" id="code" value="{{discount.code}}" required>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="form-group col-12">
                    <label for="value" class="control-label">value</label>
                    <input type="text" class="form-control" id="value" value="{{discount.value}}" required>
                    <div class="help-block with-errors"></div>
                </div>

                <div class="form-group col-12">
                    <label for="startDate" class="control-label">Start Date</label>
                    <input type="text" class="form-control" id="startDate" value="{{discount.startDate}}" required>
                    <div class=" help-block with-errors"></div>
                </div>
                <div class="form-group col-12">
                    <label for="endDate" class="control-label">endDate</label>
                    <input type="text" class="form-control" id="endDate" value="{{discount.endDate}}" required>
                    <div class="help-block with-errors"></div>
                </div>

                <button type="submit" class="btn btn-primary" style="margin:10px auto">Submit</button>
            </div>

        </form>

        <div id="dialog"></div>
        <div id="msgSubmit"></div>
    </div>
</div>
{{>logout}}
{{>scrolltotop}}
{{#extend "script"}}
<script src="/js/discountDetail-form.js"></script>
{{/extend}}